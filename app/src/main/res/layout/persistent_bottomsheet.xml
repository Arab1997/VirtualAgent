<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomsheet"
    android:layout_width="match_parent"
    android:layout_height="370dp"
    android:layout_alignParentBottom="true"
    android:background="#FFFDFD"
    android:orientation="vertical"
    app:behavior_hideable="false"
    app:behavior_peekHeight="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="374dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="-4dp"
                android:layout_marginLeft="-4dp"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:onClick="ExpandBottomSheet"
                android:padding="2dp"
                android:text="Заказать"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/orderback"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:onClick="back"
                android:padding="5dp"
                android:text="Отменить"
                android:textColor="#3E84CF"
                android:textSize="16sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#333333"
            android:importantForAccessibility="no"
            android:soundEffectsEnabled="false"
            tools:ignore="UnusedAttribute" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/orderimage"
                    android:layout_width="57dp"
                    android:layout_height="66dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="12dp" />

                <ProgressBar
                    android:id="@+id/progressbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:visibility="invisible" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="66dp">

                <TextView
                    android:id="@+id/productname"
                    android:layout_width="274dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="name"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/manname"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="9dp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Цена:"
                    android:textColor="#000"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/productprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="2dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="91dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toEndOf="@+id/cost"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/costtt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/manname"
                    android:layout_marginLeft="52dp"
                    android:layout_marginTop="-3dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="16sp" />
            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#333333"
            android:importantForAccessibility="no"
            android:soundEffectsEnabled="false"
            tools:ignore="UnusedAttribute" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="5dp"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Коллечество"
                android:textColor="#000"
                android:textSize="22sp" />


            <LinearLayout
                android:id="@+id/qtyLay"
                android:layout_width="148dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itemLay"
                android:layout_margin="@dimen/defaultMargin"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/minus"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="false"
                    android:src="@drawable/ic_minus" />

                <TextView
                    android:id="@+id/qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/defaultMargin"
                    android:layout_marginRight="@dimen/defaultMargin"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="21sp" />

                <ImageView
                    android:id="@+id/plus"
                    android:layout_width="32dp"
                    android:layout_height="31dp"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="false"
                    android:src="@drawable/ic_plus" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#333333"
            android:importantForAccessibility="no"
            android:soundEffectsEnabled="false"
            tools:ignore="UnusedAttribute" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp">

            <TextView
                android:id="@+id/wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="58dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="8dp"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Сумма"
                android:textColor="#000"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/quantityprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="8dp"
                android:maxLines="1"
                android:singleLine="true"
                android:text=""
                android:textColor="#000"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#333333"
            android:importantForAccessibility="no"
            android:soundEffectsEnabled="false"
            tools:ignore="UnusedAttribute" />

        <TextView
            android:layout_width="128dp"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Тип оплаты"
            android:textColor="#000"
            android:textSize="20sp" />

        <co.ceryle.segmentedbutton.SegmentedButtonGroup
            android:id="@+id/type"
            android:layout_width="334dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            app:sb_textTypeface="serif"
            app:sbg_animateSelectorDuration="500"
            app:sbg_backgroundColor="@color/grey_500"
            app:sbg_borderColor="@color/black"
            app:sbg_dividerBackgroundDrawable="@drawable/blue_button_background"
            app:sbg_dividerColor="@color/light_blue_800"
            app:sbg_dividerPadding="2dp"
            app:sbg_dividerRadius="15dp"
            app:sbg_dividerSize="1dp"
            app:sbg_position="0"
            app:sbg_radius="15dp"
            app:sbg_ripple="true"
            app:sbg_rippleColor="@color/black"
            app:sbg_selectorColor="@color/white">


            <co.ceryle.segmentedbutton.SegmentedButton
                android:layout_width="87dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:minHeight="10dp"
                android:padding="5dp"
                android:text="реал"
                android:textAllCaps="false"
                app:sb_text="реал"
                app:sb_textColor="@color/black"
                app:sb_textColor_onSelection="@color/black"
                app:sb_textSize="18sp" />


            <co.ceryle.segmentedbutton.SegmentedButton
                android:layout_width="108dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="перич"
                android:textAllCaps="false"
                app:sb_text="перич"
                app:sb_textColor="@color/black"
                app:sb_textColor_onSelection="@color/black"
                app:sb_textSize="18sp" />


            <co.ceryle.segmentedbutton.SegmentedButton
                android:layout_width="86dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:minHeight="10dp"
                android:padding="5dp"
                android:text="нал"
                android:textAllCaps="false"
                app:sb_text="нал"
                app:sb_textColor="@color/black"
                app:sb_textColor_onSelection="@color/black"
                app:sb_textSize="18sp" />

        </co.ceryle.segmentedbutton.SegmentedButtonGroup>


        <Button
            android:id="@+id/orderbutton"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="68dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="68dp"
            android:background="@drawable/bottom_shadow"
            android:text="Заказать"
            android:textAlignment="center"
            android:textColor="#FFFEFE"
            android:textSize="23sp" />


    </LinearLayout>


</LinearLayout>