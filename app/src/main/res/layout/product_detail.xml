<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomsheet"
    android:layout_width="match_parent"
    android:layout_height="340dp"
    android:layout_alignParentBottom="true"
    android:background="#FFFDFD"
    android:orientation="vertical"
    app:behavior_hideable="false"
    app:cardCornerRadius="56dp"
    app:behavior_peekHeight="60dp"
    app:cardElevation="@dimen/cardview_default_elevation">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagebottomsheet"
            android:layout_width="55dp"
            android:layout_height="59dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="4dp"
            android:src="@drawable/mobile1"
            android:transitionName="img"
            tools:ignore="UnusedAttribute" />


        <TextView
            android:id="@+id/namebsh"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="157dp"
            android:layout_marginRight="57dp"
            android:layout_marginBottom="2dp"
            android:layout_toEndOf="@+id/images"
            android:drawablePadding="10dp"
            android:maxLines="1"
            android:text=""
            android:textColor="#030303"
            android:textSize="15sp"
            android:textStyle="bold" />





        <!--        <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_product"
                    android:layout_width="match_parent"
                    android:layout_height="259dp">

                </androidx.recyclerview.widget.RecyclerView>-->

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="3dp">

        <TextView
            android:id="@+id/number1"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginBottom="2dp"
            android:text="№"
            android:textColor="#030303"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/number"
            android:layout_width="153dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="157dp"
            android:layout_marginRight="157dp"
            android:layout_marginBottom="2dp"
            android:layout_toEndOf="@+id/number1"
            android:drawablePadding="10dp"
            android:maxLines="1"
            android:text=""
            android:textColor="#030303"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="3dp">

        <TextView
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginBottom="2dp"
            android:text="Цена:"
            android:textColor="#030303"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/costbsh"
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="157dp"
            android:layout_marginRight="157dp"
            android:layout_marginBottom="2dp"
            android:layout_toEndOf="@+id/number1"
            android:drawablePadding="10dp"
            android:maxLines="1"
            android:text=""
            android:textColor="#030303"
            android:textSize="15sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="3dp">

        <TextView

            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginBottom="2dp"
            android:text="количество"
            android:textColor="#030303"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/col"
            android:layout_width="153dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="157dp"
            android:layout_marginRight="157dp"
            android:layout_marginBottom="2dp"
            android:layout_toEndOf="@+id/number1"
            android:drawablePadding="10dp"
            android:maxLines="1"
            android:text=""
            android:textColor="#030303"
            android:textSize="15sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="3dp">
        <TextView

            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginBottom="2dp"
            android:text="категория"
            android:textColor="#030303"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/manfactnamebsh"
            android:layout_width="153dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="157dp"
            android:layout_marginRight="157dp"
            android:layout_marginBottom="2dp"
            android:layout_toEndOf="@+id/number1"
            android:drawablePadding="10dp"
            android:maxLines="1"
            android:text=""
            android:textColor="#030303"
            android:textSize="15sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="3dp">

        <TextView

            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginBottom="2dp"
            android:text="производитель"
            android:textColor="#030303"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/catnamebsh"
            android:layout_width="153dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="157dp"
            android:layout_marginRight="157dp"
            android:layout_marginBottom="2dp"
            android:layout_toEndOf="@+id/number1"
            android:drawablePadding="10dp"
            android:maxLines="1"
            android:text=""
            android:textColor="#030303"
            android:textSize="15sp"
            android:textStyle="bold" />


    </LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>